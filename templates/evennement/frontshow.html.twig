{% extends 'frontbase.html.twig' %}

	{% block title %}Evennement
	{% endblock %}
	
	
	{% block body %}
		<h1 style="text-align:center;">{{ evennement.titre }}</h1>
		<div style="float:center;">
			<img
			class="card-img-top" src={{asset('assets/img/' ~ evennement.eventimg)}} alt="..." width="1150" height=" 300"/>
		<!-- Product details-->
	
		</div>
	
		<table class="table">
			<tbody>
	
				<tr>
					<th>Titre:
					</th>
					<td>{{ evennement.titre }}</td>
	
				</tr>
				<tr>
					<th>Description:
					</th>
					<td>{{ evennement.description }}</td>
				</tr>
				<tr>
					<th>DateDebut:
					</th>
					<td>{{ evennement.dateDebut ? evennement.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
				<tr>
					<th>DateFin:
					</th>
					<td>{{ evennement.dateFin ? evennement.dateFin|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
				<tr>
					<th>Zone:
					</th>
					<td>{{ evennement.zone }}</td>
				</tr>
				<tr>
					<th>nombre de Passe restant:
					</th>
					<td>{{ evennement.nbrPasse }}</td>
				</tr>
				<tr>
					<th>prix ticket:
					</th>
					<td>{{ evennement.prix }}</td>
				</tr>
				<tr>
					<th>
						<a href={{ path('app_evennement_front_index') }} style="color: #295C6E; border-radius: 5px; border: 1px solid #222875;  padding: 5px 10px; background-color: #D6D6D6;">back to list</a>
						<a href={{ path('app_evennement_update', {'id': evennement.id, 'nbrP': evennement.nbrPasse,'prix': evennement.prix }) }} style="color: #295C6E; border-radius: 5px; border: 1px solid #222875;  padding: 5px 10px; background-color: #D6D6D6;">BUY</a>
					</th>
					<td></td>
				</tr>
			</tbody>
	
		</table>
	
	
	{% endblock %}