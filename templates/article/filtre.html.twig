{% for article in articles %}
    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 wow fadeIn" data-wow-duration="1s" data-wow-delay="0.2s" style="visibility: visible; animation-duration: 1s; animation-delay: 0.2s; animation-name: fadeIn;">
                        <div class="widget clearfix">
                            <img src="{{article.image ? article.image}}" >
                            
                            <div class="widget-title">
                                <h3>{{ article.titre }}</h3>
                                
                                <small>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</small>
                            </div>
                            <!-- end title -->
                            <p>{{ article.description }}</p>
                            
    
                            <div class="footer-social">
                                <a href="{{ asset ('assets/#')}}" class="btn grd1"><i class="fa fa-facebook"></i></a>
                                <a href="{{ asset ('assets/#')}}" class="btn grd1"><i class="fa fa-github"></i></a>
                                
                            
                                
                            </div>
                        </div><!--widget -->
                    </div>
    
                    {{ include('article/_delete_form.html.twig') }}
    {% endfor %}