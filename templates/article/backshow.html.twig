{% extends 'backbase.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}    


<div class="shadow">
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ article.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ article.description }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ article.updatedAt ? article.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>image</th>
                <td>{{ article.image ? article.image }}</td>
            </tr>
        </tbody>
    </table>
    {{form(commantaireForm)}}
    <a href="{{ path('app_article_index') }}">back to list</a>
   
    {{ include('article/_delete_form.html.twig') }}</div>
{% endblock %}
