{% block body %}
<div class="container">
<header class="bg-secondary py-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center text-white">
                <h1 class="display-4 fw-bolder">Details Menu</h1>
            </div>
        </div>
    </header>
<br>
<br>

    <table class="table">
        <tbody>
            <tr>
