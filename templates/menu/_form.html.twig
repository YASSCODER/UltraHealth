
{{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'new-ing-body'}}) }}

    <div style="padding:20px 0 0 0">
    {{ form_row(form.titre, {
    'label': 'Nom de Menu',
    'label_attr': {'class': 'text-style', 'style': 'font-size: 24px;'},
    'attr': {'class': 'form-control'}
}) }}
{% if form_errors(form.titre) is not empty %}
<br>
    <div class="alert alert-danger">
    {{ form_errors(form.titre) }}
</div>
{% endif %}

    
    {{ form_label(form.category,"Category:", {'label_attr': {'class': 'text-style','style':'font-size:24px;'}}) }}
    
    {{ form_widget(form.category,{ 'attr': {'class': 'form-control'} }) }}
    {% if form_errors(form.category) is not empty %}
    <br>
    <div class="alert alert-danger">
    {{ form_errors(form.category) }}
    </div>
    {% endif %}

    {{ form_label(form.plats,"Plats", {'label_attr': {'class': 'text-style', 'style':'font-size:24px;'}}) }}
    
    {{ form_widget(form.plats,{ 'attr': {'class': 'form-control'} }) }} 
    {% if form_errors(form.plats) is not empty %}
    <br>
    <div class="alert alert-danger">
    {{ form_errors(form.plats) }}
    </div>
    {% endif %}

    
    <br>
    <div class="btn-container" style="padding:0 0 15px 0;">
    <button type="submit" class="btn btn-success" style="margin:10px;" >{{ button_label|default('Save') }}</button>
    
    
{{ form_end(form) }}

