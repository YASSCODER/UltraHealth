    <title>Admin - Register</title>

    <!-- Custom fonts for this template-->
    <link href={{ asset('vendor-dash/fontawesome-free/css/all.min.css') }} rel="stylesheet" type="text/css">
    <link
        href={{asset('https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i')}}
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href={{asset('css-dash/sb-admin-2.min.css')}} rel="stylesheet">

</head>

<body class="bg-gradient-primary">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                            </div>
                            {{ form_start(registrationForm) }}
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        {{ form_widget(registrationForm.cin,{'attr': {'placeholder': 'CIN'}},{ 'attr': {'class': 'form-control form-control-user'} }) }}    
                                    </div>
                                    <div class="col-sm-6">
                                        {{ form_widget(registrationForm.nom,{'attr': {'placeholder': 'NOM'}},{ 'attr': {'class': 'form-control form-control-user'} }) }} 
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        {{ form_widget(registrationForm.prenom,{'attr': {'placeholder': 'PRENOM'}},{ 'attr': {'class': 'form-control form-control-user'} }) }}    
                                    </div>
                                    <div class="col-sm-6">
                                        {{ form_widget(registrationForm.dateNaissance,{ 'attr': {'class': 'form-control form-control-user'} }) }} 
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        {{ form_widget(registrationForm.zone,{'attr': {'placeholder': 'Zone'}},{ 'attr': {'class': 'form-control form-control-user'} }) }}    
                                    </div>
                                    <div class="col-sm-6">
                                        {{ form_widget(registrationForm.email,{'attr': {'placeholder': 'email'}},{ 'attr': {'class': 'form-control form-control-user'} }) }} 
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        {{ form_widget(registrationForm.password,{'attr': {'placeholder': 'Password'}},{ 'attr': {'class': 'form-control form-control-user'} }) }} 
                                    </div>    
                                    <div class="col-sm-6">
                                        {{ form_widget(registrationForm.plainPassword,{'attr': {'placeholder': 'Retype Password'}},{ 'attr': {'class': 'form-control form-control-user'} }) }} 
                                    </div>
                                </div>
                               <button type="submit" class="btn">Register</button>
                            {{ form_end(registrationForm) }}
                            <hr>
                            <div class="text-center">
                                <a class="small" href="forgot-password.html">Forgot Password?</a>
                            </div>
                            <div class="text-center">
                                <a class="small" href="login.html">Already have an account? Login!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src={{asset('vendor-dash/jquery/jquery.min.js')}}></script>
    <script src={{asset('vendor-dash/bootstrap/js/bootstrap.bundle.min.js')}}></script>

    <!-- Core plugin JavaScript-->
    <script src={{asset('vendor-dash/jquery-easing/jquery.easing.min.js')}}></script>

    <!-- Custom scripts for all pages-->
    <script src={{asset('js-dash/sb-admin-2.min.js')}}></script>

</body>

</html>